@using LibraryWebApplication.Web.Models.Common.Modals
@{
    Layout = null;
}
<div class="modal fade" id="DepartmentCreateModal" tabindex="-1" role="dialog" aria-labelledby="DepartmentCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewDepartment")))
            <form name="departmentCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("DepartmentName")</label>
                        <div class="col-md-9">
                            <input type="text" name="DepartmentName" class="form-control" required>
                        </div>
                    </div>   
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Description")</label>
                        <div class="col-md-9">    
                            <textarea type="text" name="Description" class="form-control" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Remarks")</label>
                        <div class="col-md-9">
                            <input type="text" name="Remarks" class="form-control" required>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
